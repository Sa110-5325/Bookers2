<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>Following Users</h2>
    <table class ="table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @followings.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
          <td><%= user.name %></td>
          <td><span>フォロー数：</span><%= user.followings.count %></td>
  				<td><span>フォロワー数：</span><%= user.followers.count %></td>
          <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
